---
import {Image} from 'astro:assets';
import Screen from './Screen.astro';
import '../styles/monitor.css';

import imageWallpaper from '../assets/images/wallpaper.jpg';
import imageLogo from '../assets/images/logozilo.png';
---

<div class="monitor">
    <div class="monitor__top">
        <slot name="top" />
    </div>

    <div class="monitor__middle">
        <div class="monitor__left">
            <slot name="left" />
        </div>

        <div class="monitor__content">
            <Screen src={imageWallpaper} alt="Wallpaper", fit="cover", vignette={false}>
                <slot />
            </Screen>
        </div>

        <div class="monitor__right">
            <slot name="right" />
        </div>
    </div>

    <div class="monitor__bottom">
        <Image class="monitor__logo" alt="ZILNULL Logo" src={imageLogo}>
    </div>
</div>

