---
import { getEntry } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
import DesktopApp from '../../react/DesktopApp.tsx';

export async function getStaticPaths() {
  const entries = import.meta.glob("../../content/blogs/*.md");
  return Object.keys(entries).map((p) => ({
    params: { slug: p.split("/").pop()?.replace(".md", "") },
  }));
}

const { slug } = Astro.params;
const entry = await getEntry("blogs", slug!);
if (!entry) throw new Error("Not found");
const { Content } = await entry.render();

const initialWindows = [
  {
    appId: 'blog',
    payload: { postSlug: slug, route: 'post' },
    init: { maximized: true, }
  }
];
---

<BaseLayout title={entry.data.title}>
  <DesktopApp 
    client:load 
    pinnedApps={['blog', 'gallery', 'logs', 'notes']} 
    shortcuts={['blog', 'gallery', 'logs']} 
    initialWindows={initialWindows} 
  />
</BaseLayout>
